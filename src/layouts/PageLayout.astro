---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  heading?: string;
  ogImage?: string;
}

const { title, description, heading, ogImage } = Astro.props;
const displayHeading = heading ?? title;
---

<BaseLayout title={title} description={description} ogImage={ogImage}>
  <div class="mx-auto max-w-4xl px-4 py-12 md:px-6 md:py-16">
    <h1 class="mb-8 text-3xl font-bold text-text-primary md:text-4xl">
      {displayHeading}
    </h1>
    <slot />
  </div>
</BaseLayout>
